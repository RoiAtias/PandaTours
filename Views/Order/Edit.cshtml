@model PandaTours.Models.Order

@{
    ViewBag.Title = "Edit";
}
<br /><br />
<br /><br />
<br /><br />
<div class="container body-content">
    <h2 class="text-muted">Edit Order</h2>
    <div class="text-right">
        @Html.ActionLink("Back to List", "Index")
    </div>
    <hr />
    <br />
    <br />
    <div class="text-left">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Order</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.OrderID)

                <div class="form-group">
                    @Html.LabelFor(model => model.CustomerID, "CustomerID", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CustomerID", String.Empty)
                        @Html.ValidationMessageFor(model => model.CustomerID)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VacationPackageID, "VacationPackageID", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("VacationPackageID", String.Empty)
                        @Html.ValidationMessageFor(model => model.VacationPackageID)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PassengersNum, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PassengersNum)
                        @Html.ValidationMessageFor(model => model.PassengersNum)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Total, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Total)
                        @Html.ValidationMessageFor(model => model.Total)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OrderDate, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OrderDate)
                        @Html.ValidationMessageFor(model => model.OrderDate)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }



    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>
